{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Project",
  "description": "A DIT project pipeline definition",
  "type": "object",
  "required": ["name", "namespace", "scm", "environments"],
  "properties": {
    "name": {
      "description": "The unique identifier for a project",
      "type": "string"
    },
    "namespace": {
      "description": "Team of the project",
      "type": "string"
    },
    "scm": {
      "description": "Project repository",
      "type": "string"
    },
    "environments": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "minProperties": 1,
        "required": ["environment", "type", "app", "vars", "secrets", "run"],
        "properties": {
          "environment": {
            "description": "Target environment",
            "type": "string"
          },
          "type": {
            "description": "Platform type",
            "type": "string"
          },
          "app": {
            "description": "Destination app name",
            "type": "string"
          },
          "vars": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object"
            }
          },
          "secrets": {
            "type": "object",
            "required": ["path"],
            "properties": {
              "path": {
                "type": "string",
                "description": "Vault path to secrects"
              }
            }
          },
          "run": {
            "type": "array",
            "minItems": 1
          }
        }
      }
    }
  }
}
